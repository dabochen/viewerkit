{
  "name": "viewerkit-template-simple-react",
  "displayName": "ViewerKit Simple React Template",
  "description": "Official ViewerKit template - A complete VS Code extension with React webview for file viewing and editing. Clone and customize for your own file types.",
  "version": "1.0.0",
  "publisher": "viewerkit",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "template",
    "markdown",
    "viewer",
    "editor",
    "viewerkit",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/viewerkit/viewerkit"
  },
  "homepage": "https://github.com/viewerkit/viewerkit",
  "bugs": {
    "url": "https://github.com/viewerkit/viewerkit/issues"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onCustomEditor:viewerkit.markdownViewer"
  ],
  "contributes": {
    "customEditors": [
      {
        "viewType": "viewerkit.markdownViewer",
        "displayName": "ViewerKit Markdown Viewer",
        "selector": [
          {
            "filenamePattern": "*.md"
          },
          {
            "filenamePattern": "*.markdown"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "viewerkit.markdownViewer.openWith",
        "title": "Open with ViewerKit Markdown Viewer"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "viewerkit.markdownViewer.openWith",
          "when": "resourceExtname == .md || resourceExtname == .markdown",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && cd webview-ui && npm run build",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "build": "npm run compile && cd webview-ui && npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.19.9",
    "@types/vscode": "^1.46.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
