{
  "name": "viewerkit",
  "version": "1.0.1",
  "description": "SDK for building VS Code/Cursor extensions with minimal setup (monorepo root)",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "engines": {
    "node": ">=18",
    "vscode": "^1.85.0"
  },
  "packageManager": "pnpm@8.0.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "build:legacy": "tsup",
    "dev:legacy": "tsup --watch",
    "prepublishOnly": "pnpm run build:legacy",
    "docs": "typedoc"
  },
  "keywords": [
    "vscode",
    "cursor",
    "extension",
    "webview",
    "sdk",
    "typescript",
    "react"
  ],
  "author": "ViewerKit Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dabochen/viewerkit.git"
  },
  "homepage": "https://github.com/dabochen/viewerkit#readme",
  "bugs": {
    "url": "https://github.com/dabochen/viewerkit/issues"
  },
  "devDependencies": {
    "@types/node": "^24.0.12",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "tsup": "^8.0.0",
    "turbo": "^1.10.0",
    "typedoc": "^0.28.7",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
